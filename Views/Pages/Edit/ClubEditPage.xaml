<Page
    x:Class="Kindergarten.Views.Pages.Edit.ClubEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="ClubEditPage"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="120"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <StackPanel Width="300">
        <TextBox
            md:HintAssist.Hint="Название"
            md:HintAssist.IsFloating="True"
            Text="{Binding Title}" />
        <!--<TextBox
            md:HintAssist.Hint="Количество детей"
            md:HintAssist.IsFloating="True"
            Text="{Binding CountChildren}" />-->
        <TextBox
            md:HintAssist.Hint="Максимальное количество"
            md:HintAssist.IsFloating="True"
            Text="{Binding MaxChildren}" />

        <Button
            Margin="0,10"
            Click="Button_Click"
            Content="Добавить" />
    </StackPanel>
</Page>